<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_products"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ListShoppingListFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="40dp"
        android:weightSum="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="252dp"
            android:layout_height="60dp">
            <TextView
                android:layout_width="273dp"
                android:layout_height="49dp"
                android:textAlignment="center"
                android:textSize="22dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/list_shoppinglist_title"
                android:layout_marginTop="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_add_shopping_list"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:background="@drawable/roundedbouton"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:textSize="30dp"
                android:textAlignment="center"
                android:text="+" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="89dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <ListView
                android:id="@+id/product_list_view"
                android:layout_width="match_parent"
                android:layout_marginTop="17dp"
                android:layout_height="421dp"></ListView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
